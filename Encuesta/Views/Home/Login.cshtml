        <div class="row">

            <div class="col-lg-6 animated flipInX">
                <img src="~/Content/Img/undraw_authentication_fsn5.svg" class="img-responsive" />
            </div>
            <div class="col-lg-6 animated zoomIn delay-1s">
                <h1 style="font-size:30px; margin-bottom:0.3em !important; color:#0000d6 !important; font-weight:500; text-shadow: 2px 2px 0 #ccc;" class="text-center">
                    <span>Inicio de sesión</span>
                </h1>
                <hr />
                <form id="formLogin" class="p-3">
                    <div class="row">
                        <div class="col-lg-offset-3 col-lg-9">
