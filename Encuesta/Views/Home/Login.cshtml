                                <label for="user"> <i class="fas fa-user text-primary mr-05-ico"></i> Usuario: </label>
                                <input type="text" name="user" id="user" class="form-control text-capitalize" />
                            </div>
                            <div class="form-group">
                                <label for="pass"> <i class="fas fa-key text-primary mr-05-ico"></i> Contraseña: </label>
                                <input type="password" name="pass" id="pass" class="form-control" />
                            </div>
                            <div class="form-group text-left">
                                <button type="submit" class="btn btn-color btn-sha btn-sm" style="margin-left:8em !important; margin-bottom:0px !important; margin-top:2em !important;">
                                    Iniciar
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

