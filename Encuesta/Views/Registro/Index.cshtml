
@{
    ViewBag.Title = "Index";
}

@{ 
    if (Model.sMensaje == "success") {
        <div class="container" style="margin-top:4em !important;">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="text-success">
                        Registro correcto!
                    </h2>
                </div>
            </div>
        </div>
    } else
    {
       <div class="container" style="margin-top:4em !important;">
           <div class="row">
               <div class="col-lg-12 text-center">
                   <h2 class="text-danger">
                       Ocurrio un error
                   </h2>
               </div>
           </div>
       </div>
    }
}
