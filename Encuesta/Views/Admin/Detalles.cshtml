
@{
    ViewBag.Title = "Detalles";
}

@{

    if (Session["keyUser"] != null)
    {
        if (Model.sMensaje == "success")
        {
            <div style="margin-top:3em !important; margin-bottom:12em !important;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 animated fadeIn" style="margin-top:6.7em !important;">
                            <div style="margin-bottom:2em !important;">
                                <img class="img-fluid" src="~/Content/Img/undraw_team_work_k80m.svg" />
                            </div>
                            <a href="/Admin/Index" class="btn btn-block col-btn-form1">
                                <i class="fas fa-arrow-left"></i> <span style="margin-left:1em;">Volver</span>
                            </a>
                            <a href="#" data-toggle="modal" data-target="#regCentro" class="btn btn-block col-btn-form1 mt-4" id="btnnewregcentro">
                                <i class="fas fa-plus"></i> <span style="margin-left:0.5em;">Nuevo centro</span>
                            </a>
                        </div>
                        <div class="col-lg-9 col-md-9 col-sm-12 animated fadeInLeft delay-1s">
                            <h2><b> <i class="fas fa-industry col-ico mr-2"></i> Centros de trabajo de: @Model.sNombre </b></h2>
                            <hr />
                            <div class="row" id="containcentros"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="regCentro" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                <b class="text-center col-labels"> <i class="fas fa-briefcase col-ico mr-2"></i> Registrar centro de trabajo</b>
                            </h5>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <input value="@Model.sNombre" type="hidden" id="nomempcentro" />
                                <input value="@Model.iIdEmpresa" type="hidden" id="clvempcentro" />
                                <div class="offset-2 col-lg-8">
                                    <div class="form-group">
                                        <label class="col-form-label col-labels" for="centrotra"> <i class="fas fa-briefcase col-ico mr-2"></i> Centro de trabajo:</label>
                                        <input type="text" id="centrotra" required name="centrotra" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label col-labels" for="ubicacion"> <i class="fas fa-map-marker-alt col-ico mr-2"></i> Ubicación:</label>
                                        <input type="text" id="ubicacion" name="ubicacion" required class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" id="btnclcentro">
                                <i class="fas fa-times mr-2"></i> Cerrar
                            </button>
                            <button type="button" class="btn btn-sm col-btn-form1" id="btnregcentro"> <i class="fas fa-check-circle mr-2"></i> Aceptar </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" data-backdrop="static" id="editcentro" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="text-center modal-title" id="exampleModalLabel">
                                <b class="text-center col-labels"> <i class="fas fa-edit mr-2 col-ico"></i> Editar registro <span id="nomcent"></span> </b>
                            </h5>
                            <hr />
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="offset-2 col-lg-8">
                                    <input type="hidden" id="clvempdat" value="@Model.iIdEmpresa" />
                                    <input type="hidden" id="clvcentro" />
                                    <div class="form-group">
                                        <label class="col-form-label col-labels" for="centro_nom"> <i class="fas fa-briefcase col-ico mr-2"></i> Nombre del centro: </label>
                                        <input type="text" id="centro_nom" class="form-control" />
                                        <input type="hidden" id="centron_org" />
                                    </div>
                                    <div class="form-group">
                                        <label class="col-form-label col-labels" for="ubicacion_nom"> <i class="fas fa-map-marker-alt col-ico mr-2"></i> Ubicación: </label>
                                        <input type="text" id="ubicacion_nom" class="form-control" />
                                        <input type="hidden" id="ubicacionc_org" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" id="btncloseeditcen">
                                <i class="fas fa-times mr-2"></i> Cerrar
                            </button>
                            <button type="button" class="btn btn-sm col-btn-form1" id="btnsaveeditcent"> <i class="fas fa-check-circle mr-2"></i> Actualizar</button>
                        </div>
                    </div>
                </div>
            </div>

            @*<script type="text/javascript" src="~/Scripts/Admin/registrosempresa.js"></script>

                <script type="text/javascript">
                document.addEventListener('DOMContentLoaded', () => {
                    datareg(@Model.iIdEmpresa);
                });
                </script>*@

            <script type="text/javascript" src="~/Scripts/Admin/registrocentros.js"></script>
            <script type="text/javascript">
                document.addEventListener('DOMContentLoaded', () => {
                    datareg(@Model.iIdEmpresa);
                });
            </script>
        }
        else
        {
            <script type="text/javascript">
                location.href = "/Home/Logout";
            </script>
        }
    }
    else
    {
        <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', () => {
                location.href = "/Home/Index";
            });
        </script>
    }
}

