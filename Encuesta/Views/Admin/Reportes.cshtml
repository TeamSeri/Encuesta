
@{
    ViewBag.Title = "Reportes";
}


@{
    if (Session["keyUser"] != null)
    {

        <div class="container-fluid mt-5 mb-5">

            <div class="row">

                <div class="col-md-3 text-left">
                    <h2>
                        <b>
                            <i class="fas fa-headset col-ico mr-2"></i> Soporte
                        </b> 
                    </h2>
                    <hr />
                    <div style="margin-bottom:2em !important;">
                        <img class="img-fluid" src="~/Content/Img/undraw_in_progress_ql66.svg" />
                    </div>
                </div>

                <div class="col-md-9">
                    <h2>
                        <b>
                            <i class="fas fa-list col-ico mr-2"></i>
                            Listado
                        </b>
                    </h2>
                    <hr />
                    <div>
                        <table id="tabreport">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Usuario</th>
                                    <th>Problema</th>
                                    <th>Empresa</th>
                                    <th>Estado</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody id="bodrep"></tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>

        <div class="modal fade" data-backdrop="static" id="detallesrep" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-center" id="exampleModalLabel">
                            <b class="text-center col-labels"> <i class="fas fa-book-open mr-2 col-ico"></i> Detalles de reporte: <span id="codreport"></span>. </b>
                        </h5>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12 text-left">
                               <p> <b> <i class="fas fa-user mr-2 col-ico"></i> Reporto: <span id="namrep"></span> </b> </p>
                            </div>
                            <div class="col-lg-12 text-left mt-4">
                                <p><b> <i class="fas fa-industry mr-2 col-ico"></i> Empresa: <span id="namemp"></span> </b> </p>
                            </div>
                            <div class="col-lg-12 mt-4">
                                <p> <b><i class="fas fa-comments mr-2 col-ico"></i> Problema:</b> <span id="contprob"></span> </p>
                            </div>
                            <div class="col-lg-12 mt-4">
                                <p> <b><i class="fas fa-comment mr-2 col-ico"></i> Mensaje:</b> <span id="msjprob"></span> </p>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal" id="btncloserep">
                            <i class="fas fa-times mr-2"></i> Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br /><br /><br />

        <div class="modal fade" data-backdrop="static" id="updrep" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-center" id="exampleModalLabel">
                            <b> Actualizar reporte: <span id="codreportupd"></span>. </b>
                        </h5>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12" style="margin-top:2em !important;">
                                <p> <b><i class="fas fa-comments" style="margin-right:0.5em !important;"></i> Problema:</b> <span id="contentreprob"></span> </p>
                            </div>
                            <div class="col-lg-offset-3 col-lg-6" style="margin-top:2em !important;">
                                <input type="hidden" id="clvrepenv" />
                                <div class="form-group">
                                    <label>Se ha solucionado?</label>
                                    <select class="form-control" id="selrep">
                                        <option value="0">Si</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Añade un mensaje</label>
                                    <textarea rows="6" class="form-control" id="msjrep" placeholder="Escribe el mensaje para el usuario que reporto"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnclsupdrep">Cerrar</button>
                        <button type="button" class="btn btn-success" id="btnupdreport">Actualizar</button>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript" src="~/Scripts/Admin/reportesdet.js"></script>

    }
    else
    {
        <script type="text/javascript">
            location.href = "/Home/Logout";
        </script>
    }
}